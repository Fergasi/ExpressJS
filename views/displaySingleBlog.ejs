<!DOCTYPE html>
<html>
  <head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
      $(document).ready(function () {
        jQuery.each( [ "put", "delete" ], function( i, method ) {
            jQuery[ method ] = function( url, data, callback, type ) {
                if ( jQuery.isFunction( data ) ) {
                    type = type || callback;
                    callback = data;
                    data = undefined;
                }
            
                return jQuery.ajax({
                    url: url,
                    type: method,
                    dataType: type,
                    data: data,
                    success: callback
                });
            };
        });

        var blogId;
        $("#getSingleBlog").click(function () {
          blogId = $("#blogId").val();
          $.get(
            "http://localhost:4000/blogs/singleBlog/" + blogId,
            function (blog) {
                $("#blogTitle").html("<h3>" + blog.title + "</h3>");
                $("#blogAuthor").html("<div> Author: " + blog.author + "</div>")
                $("#blogCreatedAt").html("<div> Created At: " + blog.createdAt + "</div>")
                $("#blogText").html(blog.text)
            }
          );
        });
        $("#deleteSingleBlog").click(function () {
            blogId = $("#blogId").val();
            console.log("delete blog")
            $.delete("http://localhost:4000/blogs/deleteBlog/" + blogId, function (data) {
               $("#blogTitle").html('')
               $("#blogAuthor").html('')
               $("#blogText").html(data)
            })

        })  
      });
    </script>
  </head>
  <body>
    <h2>
      <a href="http://localhost:4000/blogs/displayBlogs">Display Blog</a>
      <br>
      <a href="http://localhost:4000/blogs/displaySingleBlog">Display Single Blog</a>
      <br>
      <a href="http://localhost:4000/blogs/postBlog">Post Blog</a>
    </h2>
    <h1>Single Blog</h1>
    <span>
      <label>Blog ID</label>
      <input id="blogId" type="text" />
    </span>
    <button id="getSingleBlog">Get Single Blog</button>
    <button id="deleteSingleBlog">Delete Single Blog</button>
    <div>
        <br>
        <p id="blogTitle"></p>
        <div></div>
        <p id="blogAuthor"></p>
        <p id="blogCreatedAt"></p>
        <br>
        <p id="blogText"></p>
        <br>
    </div>
  </body>
</html>